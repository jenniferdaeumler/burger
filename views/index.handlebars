<h1>Burgers</h1>
<ol>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    {{this.burger_name}}

      <button class="devoured">Devoured</button>
  </li>
  {{/unless}}
  {{/each}}
</ol>


<h2>Devoured Burgers</h2>

<ol>

  {{#each burgers}}
  {{#if devoured}}
  <li>
    {{this.burger_name}}
  </li>
  {{/if}}
  {{/each}}
</ol>

<h2>Add a Burger</h2>

<form class="create-form">
  <div class="form-group">
    <label for="bn">New Burger Name:</label>
    <input type="text" id="bn" name="name">
      <button type="submit">Add</button>
  </div>
</form>