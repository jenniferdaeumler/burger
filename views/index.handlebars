<div class="container">
  <div class="row justify-content-center">
    <img src="./assets/img/burger.png" alt="Burger" class="card-img">
  </div>
  <div class="row justify-content-center">
    <div class="col-6 justify-content-center">
      <h1>Burgers</h1>
      <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        <li class="list-group-item" id="newBurger">
          {{this.burger_name}}
          <button type="button" class="btn btn-secondary btn-sm devoured" id="devouredBtn" data-burgerID="{{this.id}}">Devoured</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6 justify-content-center">
      <h1>Devoured Burgers</h1>

      <ol>

        {{#each burgers}}
        {{#if devoured}}
        <li class="list-group-item" id="oldBurger">
          {{this.burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col justify-content-center">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <input type="text" id="bn" name="burger_name" placeholder="New Burger Name">
          <button type="submit">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>