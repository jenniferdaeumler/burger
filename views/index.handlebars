<h1>Burgers</h1>
<ol>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    {{this.burger_name}}
  </li>
  {{/unless}}
  {{/each}}
</ol>


<h2>Devoured Burgers</h2>

<ol>

  {{#each burgers}}
  {{#if devoured}}
  <li>
    {{this.burger_name}}
  </li>
  {{/if}}
  {{/each}}
</ol>

<h2>Add a Burger</h2>
<div>
  <form action="/" method="POST">
    <textarea type="text" name="burger_name"></textarea>

    <button type="submit">Submit</button>
  </form>
</div>